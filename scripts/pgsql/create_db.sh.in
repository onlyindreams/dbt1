db_param=$1

@TOPDIR@/scripts/pgsql/set_db_env.sh "$db_param"
@TOPDIR@/scripts/pgsql/drop_db.sh

# create database
echo "create database $SID1..."
_o=`createdb $SID1 2>&1`
_test=`echo $_o | grep CREATE`
if [ "$_test" = "" ]; then
	echo "create $SID1 failed: $_o $_test"
	exit 1
fi

exit 0
